    DEFAULT REL
    SECTION .text

;------------------------------------------------------------------------------
; UINT64
;
; AsmXSetBv (
; UINT32 Index,
; UINT64 Value
; );
;------------------------------------------------------------------------------
global AsmXSetBv
AsmXSetBv:
    mov rax, rdx ; meanwhile, rax <- return value
    shr rdx, 0x20 ; edx:eax contains the value to write
    xsetbv
    ret
